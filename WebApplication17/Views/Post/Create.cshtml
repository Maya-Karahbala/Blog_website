                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>

         
            <div class="form-group">
                <label asp-for="@Model.categories" class="control-label"></label>
                <select multiple="multiple" class="form-control" id="my_multi_select1" asp-for="@Model.categories" asp-items="(List<SelectListItem>)ViewBag.categories"></select>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
